
@{
    ViewBag.Title = "DK";
    Layout = "~/Views/Shared/DN.cshtml";
}

<table  class="border shadow-sm" style="border-radius:5px;margin-left:410px;text-align:center;width:500px">
    <h2 style="text-align:center;color:blue"> ĐĂNG KÍ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>
                Họ tên khách hàng
            </td>
            <td>
                @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>

        </tr>
        <tr style="height:40px">
            <td>
                Tên đăng nhập
            </td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>

        </tr>
        <tr style="height:40px">
            <td>
                Mật khẩu
            </td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi3"]
            </td>

        </tr>
        <tr style="height:40px">
            <td>
                Mật khẩu hiện tại
            </td>
            <td>
                @Html.Password("Matkhauhientai")
                @ViewData["Loi4"]
            </td>

        </tr>
        <tr style="height:40px">
            <td>
                Địa chỉ
            </td>
            <td>
                @Html.TextBox("Diachi")

            </td>
        </tr>

        <tr style="height:40px">
            <td>
                Điện thoại
            </td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Loi6"]
            </td>

        </tr>
        <tr style="height:40px">
            <td>
                Ngày sinh
            </td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>

        </tr>
        <tr style="height:40px">
            <td>
               Email
            </td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi5"]
              
            </td>
        </tr>
        <tr style="height:40px">
            <td>
            </td>
            <td>
                <input style="color:blue" type="submit" value="Đăng ký" />
            </td>

        </tr>


    }
</table>



