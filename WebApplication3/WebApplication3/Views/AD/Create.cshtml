@model WebApplication3.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/AD.cshtml";
}

<h2>THÊM MỚI</h2>

@using (Html.BeginForm("Create", "AD", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Loại sản phẩm
            <div class="col-md-10">
                @Html.DropDownList("MALOAI")
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.MANCC, htmlAttributes: new { @class = "control-label col-md-2" })*@
            Nhà cung cấp
            <div class="col-md-10">
                @Html.DropDownList("MANCC")
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.TENSP, htmlAttributes: new { @class = "control-label col-md-2" })*@
            Tên sản phẩm
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.ANH, htmlAttributes: new { @class = "control-label col-md-2" })*@
            Ảnh
            <div class="col-md-10">
                <input type="file" name="File" />
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.SL, htmlAttributes: new { @class = "control-label col-md-2" })*@
